<%- layout('layouts/boilerplate') -%>
<div class="row mt-3">
  <div class="col-8 offset-2">
    <h3>Listing Details</h3>
  </div>
  <div
    class="card col-10 col-lg-8 col-md-9 offset-1 offset-lg-2 offset-md-1 show-card"
  >
    <img
      src="<%= listing.image %>"
      class="card-img-top show-img"
      alt="listing_image"
    />
    <div class="card-body">
      <p class="card-text">
        <b> <%= listing.title %> </b>
        <br /><%= listing.description %>
        <br />
        <%= listing.price ? listing.price.toLocaleString("en-BD") : "null" %>
        <br />
        <%= listing.location %>
        <br />
        <%= listing.country %>
      </p>
    </div>
  </div>
  <!-- Remove the empty col div below -->
  <!-- <div class="col-10 col-lg-8 col-md-9 offset-1 offset-lg-2 offset-md-1"></div> -->
  <div class="col-10 col-lg-8 col-md-9 offset-1 offset-lg-2 offset-md-1">
    <div class="btns d-flex justify-content-start gap-3 mt-3 mb-4">
      <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark">Edit</a>
      <form method="post" action="/listings/<%=listing._id %>?_method=DELETE">
        <button type="submit" class="btn btn-danger">Delete</button>
      </form>
    </div>
  </div>
</div>
